{
  // Cấu hình chuỗi kết nối database
  "ConnectionStrings": {
    // Chuỗi kết nối MySQL với các thông số:
    "DefaultConnectionString": "Server=localhost;Port=3306;Database=ProductDB;Uid=root;Pwd=Passw0rd!;"
    // - Server: localhost (máy local)
    // - Port: 3306 (cổng mặc định của MySQL)
    // - Database: ProductDB (tên database)
    // - Uid: root (username)
    // - Pwd: Passw0rd! (password)
  },

  // Cấu hình chi tiết cho Serilog
  "Serilog": {
    "MinimumLevel": {
      // Mức log mặc định là Debug (log mọi thứ từ Debug trở lên)
      "Default": "Debug",
      // Override mức log cho một số namespace cụ thể
      "Override": {
        "Microsoft": "Warning", // Log Warning trở lên cho các namespace Microsoft
        "Microsoft.Hosting.Lifetime": "Information", // Log Information trở lên cho Hosting Lifetime
        "Microsoft.AspNetCore.Authentication": "Debug", // Log Debug trở lên cho Authentication
        "System": "Warning" // Log Warning trở lên cho namespace System
      }
    }
  },

  // Cho phép ứng dụng chấp nhận request từ mọi host
  "AllowedHosts": "*"
}